<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_f_order_canteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贵州省第一食堂"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_f_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="0.6"
            android:text="2016-2-3" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/listview_divider_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/iv_f_order_image"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_f_order_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_f_order_image"
            android:text="小菜蝶" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_f_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/order_status_bg" />
        
        <TextView
            android:id="@+id/tv_f_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_f_order_status"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_f_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0.6"
            android:textSize="13sp"
            android:text="共0份外卖　实付款：￥123" />
    </RelativeLayout>

</LinearLayout>