                    android:contentDescription="@string/cont_descr" />

                <RelativeLayout
                    android:id="@+id/rl_choose_nation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:id="@+id/tv_nation_title"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:text="民    族"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_nation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_nation_title"
                        android:alpha="0.8"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择民族"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/cont_descr"
                        android:src="@drawable/tm" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/listview_divider"
                    android:contentDescription="@string/cont_descr" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="住    址"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:alpha="0.8"
                        android:background="@null"
                        android:hint="请输入住址"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </LinearLayout>
                
                <ImageView
                    android:id="@+id/iv_card_id"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/listview_divider"
                    android:contentDescription="@string/cont_descr" />

