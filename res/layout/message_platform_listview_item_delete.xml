<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/listview_divide_big"
     android:padding="4dp"
    android:orientation="vertical" >
    <LinearLayout
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#fcfcfc"
    	android:padding="6dp"
    	android:orientation="vertical"
    	>
 
    <TextView 
        android:id="@+id/tv_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="怀孕三个月了应该注意什么?"
        />
    
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       android:paddingTop="6dp"
        android:textSize="14sp"
        android:maxLines="3"
        android:textScaleX="1.0" 
        android:text="洛杉矶烦死了快放假啊打发打发啊拉到附近快乐的附件轮廓家"
        android:ellipsize="end"
         android:alpha="0.8"
        />
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        >
        
        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张燕"
            android:layout_alignParentLeft="true"
            android:alpha="0.8"
           android:textSize="12sp"
           android:layout_centerVertical="true"
            />
        
        
             <TextView
         	android:id="@+id/tv_time"
    		android:layout_toRightOf="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="13:23"
              android:textColor="@color/actionsheet_gray"
              android:typeface="serif"
              android:textSize="12sp"
    	    android:alpha="0.8"
    	    android:layout_centerVertical="true"
            />
          
        <TextView
         	android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lay_delete"
            android:paddingRight="7dp"
            android:alpha="0.6"
            android:text="12"
            android:textSize="12sp"
             android:layout_centerVertical="true"
            />
           
                 <TextView
         	android:id="@+id/iv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_count"
            android:text="@string/fa_commenting"
            android:textSize="16sp"
            android:paddingRight="3dp"
            android:alpha="0.6"
             android:layout_centerVertical="true"
            />
          
           <LinearLayout
               android:id="@+id/lay_delete"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	             android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
               >      
            <TextView
	         	android:id="@+id/iv_chat_delete"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/fa_trash"
           		android:textSize="16sp"
	            android:alpha="0.6"/>
	          
	            <TextView
	         	android:id="@+id/tv_count_delete"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
	            android:alpha="0.6"
	            android:textSize="12sp"
	            android:text="删除"
	            />
	            </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>